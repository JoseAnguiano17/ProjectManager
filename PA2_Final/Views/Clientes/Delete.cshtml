@model PA2_Final.Models.Cliente

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar al cliente</h2>

<center><h3>¿Esta seguro de eliminar a este cliente?</h3></center>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.ApellidoPaterno) @Html.DisplayFor(model => model.ApellidoMaterno)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Correo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RFC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RFC)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaAsoc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaAsoc)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.Proyectos.Count <= 0)
            {
                <input type="submit" value="Eliminar" class="btn btn-default" /> <span>|</span> @Html.ActionLink("Back to List", "Index")
            }
            else
            {
                <strong> Este usuario tiene proyectos asociados, por lo cual no se puede <span style="color:red">Eliminar</span></strong>
                <br /> <br />
                @Html.ActionLink("Regresar al listado", "Index")
            }
        </div>
    }
</div>
